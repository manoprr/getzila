<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!--Title-->
            <TextView
                android:textColor="@color/colorWhite"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="@dimen/h1"
                android:text="Register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <!--Name-->
            <LinearLayout
                android:layout_marginTop="@dimen/m1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/h3"
                    android:text="Full Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textColorHint="@color/colorGray"
                    android:hint="Firstname Lastname"
                    android:id="@+id/edtName"
                    android:layout_marginTop="@dimen/m2"
                    android:textSize="@dimen/h2"
                    android:background="@drawable/textfield_user"
                    android:textColor="@color/colorWhite"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!--ID Card-->
            <LinearLayout
                android:layout_marginTop="@dimen/m1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/h3"
                    android:text="ID Card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textColorHint="@color/colorGray"
                    android:hint="13 Digi"
                    android:id="@+id/edtIDcard"
                    android:layout_marginTop="@dimen/m2"
                    android:textSize="@dimen/h2"
                    android:background="@drawable/textfield_user"
                    android:textColor="@color/colorWhite"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <!--Email-->
            <LinearLayout
                android:layout_marginTop="@dimen/m1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/h3"
                    android:text="Email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edtEmail"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="@dimen/m2"
                    android:textSize="@dimen/h2"
                    android:background="@drawable/textfield_user"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <!--Password-->
            <LinearLayout
                android:layout_marginTop="@dimen/m1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/h3"
                    android:text="Password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edtPassword"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="@dimen/m2"
                    android:textSize="@dimen/h2"
                    android:background="@drawable/textfield_user"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <!--Re Passwaord-->
            <LinearLayout
                android:layout_marginTop="@dimen/m1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/h3"
                    android:text="Re-Password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edtRePassword"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="@dimen/m2"
                    android:textSize="@dimen/h2"
                    android:background="@drawable/textfield_user"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <!--Button-->
            <LinearLayout
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnStudent"
                    android:layout_marginRight="3dp"
                    android:textColor="@color/colorBlue"
                    android:background="@drawable/button_white"
                    android:textSize="12sp"
                    android:text="Student"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnTeacher"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/colorBlue"
                    android:background="@drawable/button_white"
                    android:textSize="12sp"
                    android:text="Teacher"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>



        </LinearLayout>


    </ScrollView>



</RelativeLayout>